#!/usr/bin/env bash
language="en"
if [[ $1 == "-l"  || $1 == "-lang" ]]; then
    if [[ $# -lt 3 ]]; then
        echo -e "Usage: wiki [-l | -language \033[1mlanguage\033[0m] \033[1mquery\033[0m"; exit 1;
    else
    language=$2
    shift 2
    fi
fi
query=""
if [[ $# -gt 1 ]]; then
    query=$*
    query=${query// /_}
else
    query=$1
fi
if [[ -z $query ]]; then
    echo -e "Usage: wiki [-l | -language \033[1mlanguage\033[0m] \033[1mquery\033[0m"; exit 1;
fi
curl -s "https://$language.wikipedia.org/w/api.php?action=query&format=json&prop=extracts&titles=$query&formatversion=2&explaintext=1&redirects=1" | jq '.query.pages|.[0].extract' -r | less
