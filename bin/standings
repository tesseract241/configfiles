#!/usr/bin/env bash
basename=$(basename "$0")
declare -A league_ids
league_ids[at1]="38 Bundesliga Austria"
league_ids[be1]="40 First Division A Belgium"
league_ids[dk1]="46 Superligaen Denmark"
