#!/usr/bin/env bash
if [[ $# -ne 2 ]]; then
    echo "Usage: url2pdf url output_file"; exit 1;
fi
PDF_URL=$(curl -sL "https://api.microlink.io/?url=https://$1&pdf&mediaType=screen" | jq '.data .pdf .url' -r)
if [[ -z $PDF_URL ]]; then
    echo "Url not found."; exit -1;
fi
curl -sL "$PDF_URL" > "$2"

